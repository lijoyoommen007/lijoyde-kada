    <script>
      
function addToCart(proId,proName,offerprice){
  $.ajax({
    url:`/addtocart/${proId}`,
    method:'post',
    data:{
     "name":proName,
     "offer":offerprice,
    },
    success:(response)=>{
      if(response.status){
        let count = $('#cartcount').html()
        count=parseInt(count)+1
        $("#cartcount").html(count)

      }
    }
  })
}

    </script>
    

