              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
              <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img  src="https://cdn.autonomous.ai/static/upload/images/common/upload/20220330/Complete-Guide-on-Full-RGB-Setup-for-Gamers--Workers_80d318bffa1.jpg" class="d-block w-100 rounded" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><a href="" class="landfont btn rounded-pill" style="background-color: #FAC300; text-decoration: none;color: #fff;">LITTLE BOY</a></h5>
                  <p>Some representative placeholder content for the first slide.</p>
                </div>
              </div>
              
              <div class="carousel-item">
                <img src="https://i.pinimg.com/originals/cc/51/d8/cc51d8516385239c695d679b893fe0ae.jpg" class="d-block w-100 rounded" alt="...">
                <div class="carousel-caption d-none d-md-block">
                  <h5><a href="" class="landfont btn rounded-pill" style="background-color: #FAC300; text-decoration: none;color: #fff;">LITTLE BOY</a></h5>
                  <p>Some representative placeholder content for the third slide.</p>
                </div>
              </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="visually-hidden">Next</span>
            </button>
          </div>
    </section>

    {{#each category}}
    

    <div class="mt-3 d-flex justify-content-center">
      {{#if this.offer}}
       {{#if this.offer.isEnabled}}
            <h1 class="landfont mt-5" style="color: #FAC300;" > {{this.categoryname}} <span style="color: white;font-family: fantasy; font-size: 1.2rem;">{{this.offer.percent}}%Off</span></h1>
       {{/if}}      
      {{else}}      
            <h1 class="landfont mt-5" style="color: #FAC300;" > {{this.categoryname}}</h1>
      {{/if}}      
    </div>
   
   <div class="owl-carousel owl-theme container mt-5">
    
    {{#each ../product}}
    
    {{#ifCond this.category ../this.categoryname}}  
      <div class="contain1">    
      <div class="item"><img class="zoom" src="/productimage/{{this._id}}.jpg" alt="1">

            {{#if ../this.offer}}
              {{#if ../this.offer.isEnabled}}
        <div class="bottom-left" style="background-color: #fcf300; color: red;font-family: fantasy;">{{../this.offer.percent}}%Off</div>
              {{/if}}
        {{/if}}
       </div>
          <div class="mt-5">
            <p style="color: white;text-align: center;" class="landfont"> {{this.productname}} <button onclick="addtowishlist('{{this._id}}','{{this.productname}}','{{this.offerprice}}')" style="border-color: #161515; box-shadow: none; background-color: #161515;" class="border-0"><i style="font-size:24px;color: white; background-color: #161515;" class="fa">&#xf08a;</i></button></p>
            <div class="d-flex justify-content-center mb-3"><a href="/viewproducts/{{this._id}}"  class="btn landfont  glow-on-hover" style="color: #fff; background-color: #FAC300;box-shadow: 0 0 19px 5px rgb(243 56 171 / 72%)"> BUY NOW </a> </div>
          </div>
      </div> 

    
    {{/ifCond}}
    {{/each}}
    </div>
    {{/each}}

  

