    <section  class="container">
    <div style="background-color: white;">
      
        
        <table style="width:0% !important;" id="table1" class="table-striped dt-responsive nowrap " >
  <thead>
    <tr>
      <th scope="col">Image</th>
      <th scope="col">Name</th>
      <th scope="col">category</th>
      <th scope="col">stock</th>
      <th scope="col">Price</th>
      <th scope="col">Offer Price</th>
      <th scope="col">Delete Product</th>
      <th scope="col">Edit Product</th>
      <th scope="col">description</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each Product}}
    <tr>
      <td><img style="width: 50px;height: 50px;" src="/productimage/{{this._id}}.jpg" alt=""></td>
      <td>{{this.productname}}</td>
      <td>{{this.category}}</td>
      <td>{{this.stock}}</td>
      <td>{{this.price}}</td>
      <td>{{this.offerprice}}</td>
      <td><a href="/admin/editproduct/{{this._id}}" class="btn btn-primary">EDIT</a></td>
      <td><a  class="btn btn-danger"  onclick="confirmation('{{this._id}}')" >DELETE</a></td>
      <td>{{this.description}}</td>
    </tr>
   {{/each}}
  </tbody>
</table>
<div class="d-flex justify-content-end mt-5">
            <a class="btn btn-success " style="margin-bottom: 2rem;" href="/admin/add-product">Add New Products </a>
        </div>
    </div>
</section>

<script>
    $(document).ready(function() {
    $('#table1').DataTable({
      responsive:true
    });
} );
</script>
 <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function confirmation(id){
    Swal.fire({
  title: 'Are you sure?',
  text: "You won't be able to revert this!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Yes, delete it!'
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire(
      'Deleted!',
      'Your file has been deleted.',
      'success',
      

    ),
    location.href = `/admin/deleteproduct/${id}`      

  }

})
  }
</script>

