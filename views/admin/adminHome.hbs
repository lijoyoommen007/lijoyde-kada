    <section>
    <div style="background-color: white;" class="container">
      
        
        <table id="table1" class="table">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Email</th>
      <th scope="col">Block User</th>
      
    </tr>
  </thead>
  <tbody>
    {{#each User}}
    <tr>
      <td style="color: black;">{{this.name}}</td>
      <td>{{this.email}}</td>
      {{#if this.isBlocked}}
      <td><a class="btn btn-primary" onclick="confirmation1('{{this._id}}')" >UNBLOCK</a></td>
      {{else}}
      <td><a  class="btn btn-danger" onclick="confirmation('{{this._id}}')" >BLOCK</a></td>
      {{/if}}
    </tr>
   {{/each}}
  </tbody>
</table>

