<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  function confirmation1(id){
    Swal.fire({
  title: 'Are you sure?',
  text: "This user will be Unblocked!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'Continue!'
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire(
      'unblocked!',
      'user is unblocked.',
      'success',
      location.href = `/admin/unblockuser/${id}`
    )      

  }

})
  }
</script>

<script>
  function confirmation(id){
    Swal.fire({
  title: 'Are you sure?',
  text: "You want to block!",
  icon: 'warning',
  showCancelButton: true,
  confirmButtonColor: '#3085d6',
  cancelButtonColor: '#d33',
  confirmButtonText: 'contine!'
}).then((result) => {
  if (result.isConfirmed) {
    Swal.fire(
      'blocked!',
      'user is blocked',
      'success',
      location.href = `/admin/blockuser/${id}`

    )      

  }

})
  }
</script>


