          <section class="vh-100 gradient-custom">
  <div class="container py-5 h-50">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-5 col-xl-4">
        <div class="card  text-white" style="border-radius: 1rem;background-color: #16151584;">
          <div class="card-body  text-center">
         
          <form action="/admin/addcategoryOffers" method="post" id="loginform">
           
            <div class="mb-md-5 mt-md ">

              {{#if err}}
              <p class="alert alert-danger">{{err}}</p>
              {{/if}}

              <h2 class="mb-2 text-uppercase" style="font-family: fantasy; color: #FAC300;">CATEGORY OFFERS</h2>

              <div class="form-outline mt-3 mb-3" style="background-color: hsl(0, 2%, 8%);">
                <h5>Select Category</h5>
                 <select  name="categoryId"  id="category" style="width: 20rem;">
                               <option selected >Select Category</option>
                               {{#each category}}
                               <option  value="{{this._id}}">{{this.categoryname}}</option>
                              {{/each}}   
                           </select>
              </div>

              <div class="form-outline  mb-3" style="background-color: #161515;">
                <h5>Category Offer Percentage</h5>
                <input type="number" id="typePasswordX" name="percent" class="form-control form-control-lg" style="background-color: white;color: black;" />
              </div>

              <div class=" mb-3" style="background-color: #161515;">
                <h5>Valied From</h5>
                <input type="date"  name="validfrom" style="background-color: white;color: black;width: 20rem;" />
              </div>
              <div class="mb-3" style="background-color: #161515;">
                <h5>Valied Till</h5>
                <input type="date" id="typePasswordX" name="validtill" style="background-color: white;color: black;width: 20rem;" />
              </div>
              

              <button  style="background-color: #FAC300;color:#630909;width: 10rem;" class="btn btn-block rounded-pill gradient-custom-4 text-body loginbtn" type="submit">ADD OFFER</button>
            
              

            </div>

           </form>
            

            <div>
              </p>
            </div>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>






